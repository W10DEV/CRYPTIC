<Window x:Class="CRYPTIC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRYPTIC"
        mc:Ignorable="d"
        Title="Watcher v1.0" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True">
    <Window.Background>
        <SolidColorBrush Opacity="0.0" Color="#1C1C1C"/>
    </Window.Background>
    <Grid>
        <Image x:Name="UIHolder" Opacity="0.75"/>
        <TextBlock x:Name="TotalBounties" Margin="-50, 140, 0, 0" FontWeight="Medium" FontSize="16" TextAlignment="Left" FontFamily="/CRYPTIC;component/Resources/#Euro Caps"></TextBlock>
        <TextBlock x:Name="ShipsDestroyed" Margin="50, 140, 0, 0" FontWeight="Medium" FontSize="16" TextAlignment="Right" FontFamily="/CRYPTIC;component/Resources/#Euro Caps"></TextBlock>
        <TextBlock x:Name="TargetBounty" Margin="0, 140, 0, 0" FontSize="18" FontWeight="Medium" TextAlignment="Center" FontFamily="/CRYPTIC;component/Resources/#Euro Caps"></TextBlock>
        <TextBlock x:Name="TargetType" Margin="0, 175, 0, 0" FontWeight="Medium" FontSize="36" TextAlignment="Center" FontFamily="/CRYPTIC;component/Resources/#Euro Caps"></TextBlock>
    </Grid>
</Window>
